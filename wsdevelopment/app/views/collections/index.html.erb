<% if !logged? %>
  <%= controller.redirect_to root_path %>
<% else %>
  <div class="col-md-9 col-lg-9 right_col">
    <h1>Collections#index</h1>
    <p>Find me in app/views/collections/index.html.erb</p>
    <% user_id = user_id(session[:user_name])%>
    <%= link_to 'create collection', user_collections_path(:user_id => user_id, :name => "prueba", :collections_notes => 29), :method => :post ,class: 'btn btn-default' %>
    <div class="row">
      <% collections = find_collections(params[:user_id]) %>
      <% collections.each do |collection| %>
      <div class="note col-xs-12 col-sm-6 col-md-3">
        <div class="note-title col-xs-12">
          <%= collection.name %>
        </div>
        <div class="note-actions col-xs-12">
          <div class="col-xs-4 center">
            <%= link_to '<i class=" fa fa-sticky-note"></i>'.html_safe, user_collections_url(user_id), class: 'btn btn-default' %>
          </div>
          <div class="col-xs-4 center">
            <%= link_to '<i class="fa fa-trash"></i>'.html_safe, { controller: 'collections', action: 'destroy', id: collection }, class: 'btn btn-danger',
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      </div>
    <% end %>
    </div>

  <% end %>
