<% if !logged? %>
  <%= controller.redirect_to root_path %>
<% else %>
  <div  class="col-md-9 col-lg-9 right_col">
    <!-- Keep all page content within the page-content inset div! -->
    <div class="page-content inset">
      <div class="row page-title">
        <div class="title_left">
          <div class="x_panel">
            <h2 style="margin: 9px 0"><i class="fa fa-cogs"></i> Admin Management</h2> 
          </div>
        </div>
      </div>
      <div class="row">
        <% @user.each do |user| %>
        <div class="note col-xs-12 col-sm-6 col-md-3">
          <div class="note-title col-xs-12">
            <%= user.user_name %>
          </div>
          <div class="note-text col-xs-12">
            <%= user.email %>
          </div>
          <div class="note-actions col-xs-12">
            <div class="col-xs-4 center">
              <%= link_to '<i class=" fa fa-sticky-note"></i>'.html_safe, user_notes_url(user), class: 'btn btn-default' %>
            </div>
            <div class="col-xs-4 center">
              <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_user_path(user), class: 'btn btn-default' %>
            </div>
            <div class="col-xs-4 center">
              <%= link_to '<i class="fa fa-trash"></i>'.html_safe, user_path(user), class: 'btn btn-danger',
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
