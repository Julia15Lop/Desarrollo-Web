<% if !logged? %>
<%= controller.redirect_to root_path %>
<% else %>
<%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css" %>
<%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js" %>
<%= javascript_include_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js" %>
<%= render :partial => "layouts/nav" %>
<body>

  <div id="main-content" class="container">
    <div class="row">
      <!--Sidebar -->
      <div class="col-md-1 col-lg-1">
        <%= render :partial => "layouts/sidebar" %>
      </div>
      <!--/Sidebar -->
      <div class="col-md-11 col-lg-11">
        <!-- Keep all page content within the page-content inset div! -->
        <div class="page-content inset">
          <div class="row page-title">
            <div class="title_left">
              <div class="x_panel">
                <h2 style="margin: 9px 0">Users List</h2> 
              </div>
            </div>
          </div>
          <div class="row">
            <% @user.each do |user| %>
            <div class="note col-xs-12 col-sm-6 col-md-3">
              <div class="note-title col-xs-12">
                <%= user.user_name %>
              </div>
              <div class="note-text col-xs-12">
                <%= user.email %>
              </div>
              <div class="note-actions col-xs-12">
                <div class="col-xs-4 center">
                  <%= link_to 'Notes', user_notes_url(user), class: 'btn btn-default' %>
                </div>
                <div class="col-xs-4 center">
                  <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-default' %>
                </div>
                <div class="col-xs-4 center">
                  <%= link_to 'Delete', user_path(user), class: 'btn btn-danger',
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Page content -->
    <div >

    </div>


  </div>
</body>
<% end %>