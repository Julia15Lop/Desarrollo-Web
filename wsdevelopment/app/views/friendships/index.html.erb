<% if !logged? %>
  <%= controller.redirect_to root_path %>
<% else %>
  <div  class="col-md-9 col-lg-9 right_col">
    <!-- Keep all page content within the page-content inset div! -->
    <div class="page-content inset">
      <div class="row page-title">
        <div class="title_left">
          <div class="x_panel">
            <h2 style="margin: 9px 0">Friends </h2> 
          </div>
        </div>
      </div>
      <div class="row">
        <% @friendship.each do |friendship| %>
          <% if friendship.status == 'confirmed' %>
          <% user = find_users(friendship.friend_id) %>
        <div class="note col-xs-12 col-sm-6 col-md-3">
          <div class="note-title col-xs-12">
            <%= user.user_name%>
          </div>
          <div class="note-text col-xs-12">
            <%= user.email %>
          </div>
        </div>
          <% end%>
        <% end %>
      </div>
    </div>
  </div>
<% end %>