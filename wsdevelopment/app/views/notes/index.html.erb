<% if !logged? %>
<%= controller.redirect_to root_path %>
<% else %>
<%= render :partial => "layouts/nav" %>
<body>
  <div id="main-content" class="container">
    <div class="row">
      <!--Sidebar -->
      <div class="col-md-1 col-lg-1">
        <%= render :partial => "layouts/sidebar" %>
      </div>
      <!--/Sidebar -->
      <!--Content page -->
      <div class="col-md-11 col-lg-11">
        <!-- Row with title -->
        <div class="row page-title">
          <div class="title_left">
            <div class="x_panel">
              
              <h2 style="margin: 9px 0">/ Notes</h2> 
            </div>
          </div>
        </div>
        <!-- / Row with title -->
        <div class="row">
          <% notes = find_notes(params[:user_id]) %>
          <% notes.each do |note| %>
          <div class="note col-xs-12 col-sm-6 col-md-3">
            <% if note.image.url %>
            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
              <div >
                <span>
                  <%= image_tag(note.image.url, alt: 'Image', class: 'note-image') if note.image? %>
                </span>
              </div>
            </div>
            <% end %>
            <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
              <div class="note-title col-xs-12">
                <%= note.title %>
              </div>
              <div class="note-text col-xs-12">
                <%= note.text %>
              </div>
            </div>

            <div class="note-actions col-xs-12">
              <div class="col-xs-4 center">
                <%= link_to 'Show', { controller: 'notes', action: 'show', id: note }, class: 'btn btn-default' %>
              </div>
              <div class="col-xs-4 center">
                <%= link_to 'Edit', { controller: 'notes', action: 'edit', id: note }, class: 'btn btn-default' %>
              </div>
              <div class="col-xs-4 center">
                <%= link_to 'Delete', { controller: 'notes', action: 'destroy', id: note }, class: 'btn btn-danger',
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
              </div>
            </div>
          </div>
          <% end %>
        </div>

        <div id="new_note_row" class="row center with-margin">
          <%= link_to 'New note', new_user_note_url, class: 'btn btn-primary btn-lg' %>
        </div>

        <% if user_session_is_admin? %>
        <div class="row center">
          <%= link_to 'Back', users_url, class: 'btn btn-info' %>
        </div>
        <% end %>
      </div>
    </div>

  </div>
</body>
<% end %>