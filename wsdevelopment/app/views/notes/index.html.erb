<body>
  <header class="container-fluid">
    <div class="center">
      <h1>Listing notes</h1>
    </div>
  </header>

  <div id="main-content" class="container">

    <div class="row">
      <% @note.each do |note| %>
        <div class="note col-xs-12 col-sm-6 col-md-3">
          <div class="note-title col-xs-12">
            <%= note.title %>
          </div>
          <div class="note-text col-xs-12">
            <%= note.text %>
          </div>
          <div class="note-actions col-xs-12">
            <div class="col-xs-4 center">
              <%= link_to 'Show', note_path(note), class: 'btn btn-default' %>
            </div>
            <div class="col-xs-4 center">
              <%= link_to 'Edit', edit_note_path(note), class: 'btn btn-default' %>
            </div>
            <div class="col-xs-4 center">
              <%= link_to 'Delete', note_path(note), class: 'btn btn-danger',
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div id="new_note_row" class="row center with-margin">
      <%= link_to 'New note', new_note_path, class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
</body>
